
<%= simple_form_for @cause do |f| %>

<%= f.input :name, error: 'Name Required'%>
<%= f.input :category, collection: ["build", "environment", "food", "health", "shelter"] %>
<%= f.input :description, error: 'Description Required' %>

<%= f.input :street %>
<%= f.input :city %>
<%= f.input :state %>
<%= f.input :zip %>
<%= f.input :phone %>

<%= f.input :url %>

<%= f.button :submit, "Add Cause" %>

<% end %>
