<%= simple_form_for @cause do |f| %>
<div class="row">
  <div class="small-8">
    <%= f.input :name, error: 'Name Required'%>
    <%= f.input :category, collection: ["build", "environment", "food", "health", "shelter"] %>
    <%= f.input :description, error: 'Description Required' %>

    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :state, collection:
    [ 'AK','AL','AR','AZ','CA','CO','CT','DC','DE','FL','GA','HI','IA','ID',
      'IL','IN','KS','KY','LA','MA','MD','ME','MI','MN','MO','MS','MT','NC',
      'ND','NE','NH','NJ','NM','NV','NY','OH','OK','OR', 'PA', 'RI','SC',
      'SD', 'TN', 'TX', 'UT', 'VA', 'VT', 'WA', 'WI','WV', 'WY'] %>
      <%= f.input :zip %>
      <%= f.input :phone %>

      <%= f.input :url %>

      <%= f.button :submit, "Add Cause" %>
    </div>
  </div>
  <% end %>
