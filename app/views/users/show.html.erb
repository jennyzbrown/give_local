  <ul class="large-block-grid-4 causes-box">
    <p class="my-causes"><%= image_tag('my_causes.png')%></p>
    <% @user.causes.uniq.each do |cause|  %>
      <p class="cause-list">
        <%= link_to cause.name, cause_path(cause)%>
      </p>
    <% end %>
    <p class="edit-links">
      <%= link_to 'edit or', edit_user_registration_path %>
